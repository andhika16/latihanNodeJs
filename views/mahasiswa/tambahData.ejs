<div class="container create contents">

    <h1>Create blogs</h1>


    <form action="/mahasiswa" method="post">
        <%- include('../partials/message') %>
        <div class="col-lg-6">
            <div class="form-group">
                <label for="email">Nama :</label>
                <input type="text" class="form-control" id="nama" name="nama" placeholder="your emails"
                    value="<%= typeof nama != 'undefined' ? nama : '' %>" />
            </div>
            <div class="form-group">
                <label for="snippets">NIM</label>
                <input type="text" class="form-control" id="nim" name="nim" placeholder="yours snippets"
                    value="<%= typeof nim != 'undefined' ? nim : '' %>">
            </div>
            <div class="form-group">
                <label for="snippets">Jurusan</label>
                <input type="text" class="form-control" id="jurusan" name="jurusan" placeholder="yours snippets"
                    value="<%= typeof jurusan != 'undefined' ? jurusan : '' %>">
            </div>
            <button type="submit" class="btn btn-primary" value="create data">submit</button>
        </div>
    </form>
</div>